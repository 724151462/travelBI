    } */
    .b-left {
      position: fixed;
      left: 5;
      bottom: 10px;
    }

    .b-right {
      position: fixed;
      right: 8px;
      bottom: 10px;
    }

    #container {
      display: grid;
      justify-content: center;
      align-content: center;
      grid-template-columns: 24% 50% 24%;
      grid-template-rows: 300px 300px 300px 620px 600px;
      gap: 5px;
      background-color: rgba(15, 33, 79, 0.8);
      background-image: url('./images/background@3x.png');
      background-size: 100% 100%;
      background-repeat: no-repeat;
      /* grid-auto-flow: column; */
      /* grid-auto-rows: 100px; */
    }

    .item {
      font-size: 2vh;
      text-align: center;
      /* border: 1px solid #e5e4e9; */
      color: #fff;
      height: inherit;
      /* background-color: rgba(24, 28, 65, 0.8); */
      background-image: url('./images/box@3x.png');
      background-size: 100% 100%;
      background-repeat: no-repeat;
    }

    .title {
      background: linear-gradient(to right, rgba(24, 28, 65, 1), rgba(0, 72, 249, 1), rgba(24, 28, 65, 1));
      color: rgba(255, 255, 255, 0.8);
    }

    .title>span {
      color: rgb(0, 174, 255)
    }

    .title>img {
