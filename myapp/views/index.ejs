<script>
  $(function () {
    getWeather()
    getPeopleRate()
    // getGeneraldata()
    getTouristage('week')
    getTouristdate()
    getTouristfrequency()
    getTouristentertain()
    getTodaydata()
    getTouristgender()
  })

  function getWeather() {
    $.ajax({
      type: "get",
      url: `${url}/weather`,
      dataType: "json",
      success: function (response) {
        var data = response.data
        $('#temp').text(data.temp + '℃')
        $('#air').text(data.air)
        $('#wind').text(data.wind)
      }
    });
  }

  // 实时人数占比
  function getPeopleRate(params) {
    $.ajax({
      type: "get",
      url: `${url}/touristrate`,
      dataType: "json",
      success: function (response) {
        var legend = []
        var data = []
        response.data.forEach(element => {
          legend.push(element.place)
          data.push({ value: element.num, name: element.place })
        });
        // 指定图表的配置项和数据
        var option = {
          tooltip: {
            trigger: 'item',
            formatter: "{a} <br/>{b}: {c} ({d}%)"
          },
          legend: {
            orient: 'vertical',
            x: 'right',
            data: legend,
            textStyle: {
              fontSize: 16,//字体大小
              color: '#ffffff'//字体颜色
            }
          },
          series: [
            {
              name: '游览比例',
              type: 'pie',
              radius: ['50%', '70%'],
              avoidLabelOverlap: false,
              label: {
                normal: {
                  show: false,
                  position: 'center'
                },
                emphasis: {
                  show: true,
                  textStyle: {
                    fontSize: '20'
                  }
                }
              },
              labelLine: {
                normal: {
                  show: false
                }
              },
              data
            }
          ]
        };
        drawCharts('tourist-num', option)
      }
    });

  }

  function getGeneraldata() {
    $.ajax({
      type: "get",
      url: `${url}/generaldata`,
      dataType: "json",
      success: function (response) {
        console.log($('.num-desc')[0])
        response.data.forEach((element, index) => {
          console.log(index)
          $('.num').eq(index).text(element.num)
          $('.num-desc').eq(index).text(element.item)
        });
      }
    });
  }

  function getTouristdate(param) {
    $.ajax({
      type: "get",
      url: `${url}/touristdate`,
      dataType: "json",
      success: function (response) {
        let legend = []
        let data = []
        response.data.forEach(element => {
          legend.push(element.item)
          data.push(element.num)
        });
        var dateOption = {
          tooltip: {
            trigger: 'axis'
          },
          legend: {
            orient: 'vertical',
            x: 'right',
            data: legend,
            textStyle: {
              fontSize: 16,//字体大小
              color: '#ffffff'//字体颜色
            }
          },
          toolbox: {
            // show : true,
            // feature : {
            //     mark : {show: true},
            //     dataView : {show: true, readOnly: false},
            //     magicType: {show: true, type: ['line', 'bar']},
            //     restore : {show: true},
            //     saveAsImage : {show: true}
            // }
          },
          calculable: true,
          xAxis: [
            {
              type: 'value',
              axisLine: {
                lineStyle: {
                  color: '#fff'
                },
                interval: 0
              },
              axisLabel: { formatter: '{value}人' },
              boundaryGap: false
            },
          ],
          axisLine: {
            lineStyle: {
              color: '#fff'
            }
          },
          yAxis: [
            {
              type: 'category',
              data: legend,
              axisLine: {
                lineStyle: {
                  color: '#fff'
                }
              }
            }
          ],
          series: [
            {
              name: '游览人数',
              type: 'bar',
              itemStyle:{
                  normal:{
                      color:'#F0862B'
                  }
              },
              data
            }
          ]
        };
        drawCharts('tourist-date', dateOption)
      }
    });
  }

  function getTouristfrequency() {
    $.ajax({
      type: "get",
      url: `${url}/touristfrequency`,
      dataType: "json",
      success: function (response) {
        let data = []
        let legend = []
        response.data.forEach(element => {
          legend.push(element.item)
          data.push({ value: element.num, name: element.item })
        })
        var rateOption = {
          tooltip: {
            trigger: 'item',
            formatter: "{a} <br/>{b}: {c} ({d}%)"
          },
          legend: {
            orient: 'vertical',
            x: 'right',
            data: legend,
            textStyle: {
              fontSize: 16,//字体大小
              color: '#ffffff'//字体颜色
            }
          },
          series: [
            {
              name: '旅游频率',
              type: 'pie',
              radius: ['50%', '70%'],
              avoidLabelOverlap: false,
              label: {
                normal: {
                  show: false,
                  position: 'center'
                },
                emphasis: {
                  show: true,
                  textStyle: {
                    fontSize: '20'
                  }
                }
              },
              labelLine: {
                normal: {
                  show: false
                }
              },
              data
            }
          ]
        };
        drawCharts('tourist-rate', rateOption)
      }
    });
  }

  function getTouristentertain() {
    $.ajax({
      type: "get",
      url: `${url}/touristentertain`,
      dataType: "json",
      success: function (response) {
        let data = []
        let legend = []
        response.data.forEach(element => {
          legend.push(element.item)
          data.push({ value: element.num, name: element.item })
        })
        var entertainOption = {
          tooltip: {
            trigger: 'item',
            formatter: "{a} <br/>{b}: {c} ({d}%)"
          },
          legend: {
            orient: 'vertical',
            x: 'right',
            data: legend,
            textStyle: {
              fontSize: 16,//字体大小
              color: '#ffffff'//字体颜色
            }
          },
          series: [
            {
              name: '娱乐频率',
              type: 'pie',
              radius: ['50%', '70%'],
              avoidLabelOverlap: false,
              label: {
                normal: {
                  show: false,
                  position: 'center'
                },
                emphasis: {
                  show: true,
                  textStyle: {
                    fontSize: '20'
                  }
                }
              },
              labelLine: {
                normal: {
                  show: false
                }
              },
              data
            }
          ]
        };
        drawCharts('tourist-entertain', entertainOption)
      }
    });
  }

  function getTodaydata(param) {
    $.ajax({
      type: "get",
      url: `${url}/todaydata`,
      dataType: "json",
      success: function (response) {
        let data = []
        let legend = []
        response.data.forEach(element => {
          legend.push(element.item)
          data.push(element.num)
        })
        var jkdataOption = {
          tooltip: {
            trigger: 'axis'
          },
          calculable: true,
          xAxis: [
            {
              type: 'category',
              data: legend,
              axisLine: {
                lineStyle: {
                  color: '#fff'
                }
              }
            },

          ],
          yAxis: [
            {
              type: 'value',
              axisLine: {
                lineStyle: {
                  color: '#fff'
                }
              }
            }
          ],
          series: [
            {
              type: 'line',
              data,
              // markLine : {
              //     data : [
              //         {type : 'average', name: '平均值'}
              //     ]
              // }
            }
          ]
        }
        drawCharts('tourist-jkdata', jkdataOption)
      }
    })
  }

  function getTouristgender(param) {
    $.ajax({
      type: "get",
      url: `${url}/touristgender`,
      dataType: "json",
      success: function (response) {
        var legend = []
        var data = []
        response.data.forEach(element => {
          let num = []
          let time = []
          element.detail.forEach(ele => {
            time.push(ele.time)
            num.push(ele.num)
          })
          legend = time
          data.push({
            name: element.item,
            type: 'line',
            data: num,
          })
        });
        var genderOption = {
          tooltip: {
            trigger: 'axis'
          },
          legend: {
            y: 'bottom',
            data: legend,
            textStyle: {
              fontSize: 16,//字体大小
              color: '#ffffff'//字体颜色
            }
          },
          calculable: true,
          xAxis: [
            {
              type: 'category',
              data: ['一月', '二月', '三月', '四月', '五月', '六月', '七月'],
              axisLine: {
                lineStyle: {
                  color: '#fff'
                }
              }
            },

          ],
          yAxis: [
            {
              type: 'value',
              axisLine: {
                lineStyle: {
                  color: '#fff'
                }
              }
            }
          ],
          series: data
        }
        drawCharts('tourist-gender', genderOption)
      }
    });
  }

</script>

